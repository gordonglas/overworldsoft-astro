---
import { SITE_TITLE } from '@root/consts';

const { activeMenu } = Astro.props;
---

<header>
  <nav class="navbar navbar-expand-md bg-primary navbar-dark navbar-fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">{SITE_TITLE}</a>

      <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar"
            aria-expanded="false" aria-controls="collapsibleNavbar" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div id="collapsibleNavbar" class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class={activeMenu === 'Home' ? 'nav-link active' : 'nav-link'} href="/"><i class="bi bi-house-door"></i> Home</a>
          </li>
          <li class="nav-item">
            <a class={activeMenu === 'News' ? 'nav-link active' : 'nav-link'} href="/news/"><i class="bi bi-newspaper"></i> News</a>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="bi bi-controller"></i> Games <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a class={activeMenu === 'ComingSoon' ? 'dropdown-item active' : 'dropdown-item'} href="/"><i class="bi bi-clock"></i> Coming Soon</a></li>
            </ul>
          </li>
          <li class={activeMenu === 'Xblig' ? 'nav-item dropdown active' : 'nav-item dropdown'}>
            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="bi bi-tablet"></i> Apps <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a class={activeMenu === 'Xblig' ? 'dropdown-item active' : 'dropdown-item'} href="/xblig-companion/"><i class="bi bi-android2"></i> XBLIG Companion</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
