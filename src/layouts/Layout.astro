---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

const { title, description, activeMenu } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <!-- This is an astro named-slot. Allows pages to specify additional html here. 
     See https://docs.astro.build/en/basics/astro-components/#named-slots -->
    <slot name="head" />
  </head>
  <body>
    <Header activeMenu={activeMenu} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
